<h1>My Tasks:</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to(task.title, task_path(task)) =%>

    <%= link_to destroy_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt fa-sm" style="color:#00334E"></i>
      <% end %>
  </li>
  <% end %>
</ul>
<div id='add'>
<%= link_to "Add New Task", new_task_path %>
</div>
